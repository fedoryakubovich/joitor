{
  "name": "joitor",
  "version": "0.3.0",
  "description": "Joitor is a middleware that helps validate body, headers, cookies, params and query in express application using joi validation.",
  "main": "src/lib/index.js",
  "files": [
    "src/lib",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "joi",
    "express",
    "validator",
    "validation",
    "express-joi",
    "joi-express"
  ],
  "scripts": {
    "start:server": "nodemon src/tests/server",
    "test": "nyc mocha src/tests/*.test.js --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint ./src/",
    "lint:fix": "eslint --fix ./src/",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fedoryakubovich/joitor.git"
  },
  "author": {
    "name": "Fedor Yakubovich",
    "email": "f.yakubovich@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fedoryakubovich/joitor/issues"
  },
  "homepage": "https://github.com/fedoryakubovich/joitor#readme",
  "nyc": {
    "include": [
      "src/lib/**/*.js"
    ],
    "exclude": [
      "src/tests/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "cookie-parser": "^1.4.5",
    "coveralls": "^3.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-mocha": "^7.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "lodash.isempty": "^4.4.0"
  }
}
